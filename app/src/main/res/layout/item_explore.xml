<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="6dp"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"
        android:id="@+id/explore_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:text="Rembrandt"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@string/font_sans_serif_black"
        android:textSize="14sp"
        android:minLines="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/explore_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/explore_count" />

    <TextView
        android:text="25 items"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@string/font_sans_serif_light"
        android:textSize="12sp"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/explore_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>