<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:text="@string/nothing_to_show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ProgressBar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/explore_swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/art_makers"
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif_black"
            android:textSize="20sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginRight="20dp"
            android:text="@string/view_all"
            android:textColor="@color/colorBlueLight"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_maker_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/explore_maker" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/explore_maker"
            android:id="@+id/makerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="@string/artist_culture"
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif_black"
            android:textSize="20sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/makerRecyclerView" />

        <TextView
            android:layout_marginRight="20dp"
            android:text="@string/view_all"
            android:textColor="@color/colorBlueLight"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_culture_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/explore_culture" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/explore_culture"
            android:id="@+id/cultureRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="@string/art_mediums"
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif_black"
            android:textSize="20sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cultureRecyclerView" />

        <TextView
            android:layout_marginRight="20dp"
            android:text="@string/view_all"
            android:textColor="@color/colorBlueLight"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_medium_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/explore_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/explore_medium"
            android:id="@+id/mediumRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="@string/art_century"
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif_black"
            android:textSize="20sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_century"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediumRecyclerView" />

        <TextView
            android:layout_marginRight="20dp"
            android:text="@string/view_all"
            android:textColor="@color/colorBlueLight"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/explore_century_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/explore_century" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/explore_century"
            android:id="@+id/centuryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


