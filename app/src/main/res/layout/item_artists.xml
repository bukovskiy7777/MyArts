<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/maker_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:text="Rembrandt"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@string/font_sans_serif_black"
        android:textSize="18sp"
        android:minLines="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/maker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/maker_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Some maker bio"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@string/font_sans_serif"
        android:textSize="16sp"
        android:minLines="1"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/maker_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/maker_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maker_name" />

    <TextView
        android:text="7 artworks"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@string/font_sans_serif"
        android:textSize="16sp"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/maker_art_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/maker_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maker_bio" />

</androidx.constraintlayout.widget.ConstraintLayout>