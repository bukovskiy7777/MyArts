<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/maker_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/art_image_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:maxHeight="600dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@color/colorSilver"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/art_image_header"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/maker_image"
            android:layout_width="96dp"
            android:layout_height="96dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/maker_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/art_image_header"
            app:layout_constraintLeft_toRightOf="@+id/maker_image"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:fontFamily="@string/font_sans_serif"
            android:text="Vincent van Gogh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/maker_bio"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/maker_name"
            app:layout_constraintLeft_toRightOf="@+id/maker_image"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:fontFamily="@string/font_sans_serif"
            android:text="30 Mar 1853 - 29 Jul 1890"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:id="@+id/maker_like"
            android:background="@drawable/ic_favorite_border_black_100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maker_bio"
            android:layout_width="26dp"
            android:layout_height="26dp" />

        <ImageButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/maker_share"
            android:background="@drawable/ic_share_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maker_bio"
            android:layout_width="26dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/maker_description"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/maker_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_maker_description"
            android:fontFamily="@string/font_sans_serif_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/read_more"
            android:textColor="@color/colorBlueLight"
            android:fontFamily="@string/font_sans_serif"
            android:textSize="15sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maker_description" />

        <TextView
            android:text="@string/wikipedia"
            android:textColor="@color/colorText"
            android:fontFamily="@string/font_sans_serif"
            android:textSize="15sp"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/wikipedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maker_description" />

        <TextView
            android:id="@+id/art_count"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/wikipedia"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:fontFamily="@string/font_sans_serif_light"
            android:text="@string/artworks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="8dp"
            android:background="@color/colorSilver"
            app:layout_constraintTop_toBottomOf="@+id/art_count"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:id="@+id/art_image"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maker_layout_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/text_layout"
        app:layout_constraintLeft_toRightOf="@+id/art_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/art_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="visible"
            android:text="Rembrandt gfjdsjsn bjgkddlsl ghb b b gg g ggfd ddas "
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif_black"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/art_maker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="4dp"
            android:text="Rembrandt, France, Paris 1703-1770 Paris, 1763. Was a famous painter ffgffg ghjgfkjfdk ghgjddsk ghfjkssk ghddjkssk gvjfdjssk"
            android:textColor="@color/colorBlack"
            android:fontFamily="@string/font_sans_serif"
            android:textSize="14sp"
            android:minLines="1"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/art_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/art_maker" />

        <ImageButton
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/art_share"
            android:background="@drawable/ic_share_black"
            app:layout_constraintStart_toEndOf="@+id/art_download"
            app:layout_constraintTop_toBottomOf="@+id/art_title"
            android:layout_width="26dp"
            android:layout_height="26dp"
            />

        <ImageButton
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/art_download"
            android:background="@drawable/ic_file_download_black_100dp"
            app:layout_constraintStart_toEndOf="@+id/art_like"
            app:layout_constraintTop_toBottomOf="@+id/art_title"            android:layout_width="26dp"
            android:layout_height="26dp"
            />

        <ImageButton
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/art_like"
            android:background="@drawable/ic_favorite_border_black_100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/art_title"              android:layout_width="26dp"
            android:layout_height="26dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>