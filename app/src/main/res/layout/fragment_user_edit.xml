<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    android:fontFamily="@string/font_sans_serif"
                    android:text="@string/edit_account"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/account_back"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_keyboard_backspace_black_100dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/delim_toolbar"
                android:background="@color/colorSilver"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminateTint="@color/colorBlue"
                android:indeterminate="true"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:scaleY="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delim_toolbar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_back_user_photo"
                android:src="@drawable/edit_user_placeholder"
                app:layout_constraintBottom_toBottomOf="@+id/user_image"
                app:layout_constraintTop_toTopOf="@+id/user_image"
                app:layout_constraintLeft_toLeftOf="@+id/user_image"
                app:layout_constraintRight_toRightOf="@+id/user_image"
                android:layout_width="132dp"
                android:layout_height="132dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_marginTop="40dp"
                android:id="@+id/user_image"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_back_delete_photo"
                android:src="@color/colorBlueFilter"
                app:layout_constraintBottom_toBottomOf="@+id/ic_delete_photo"
                app:layout_constraintTop_toTopOf="@+id/ic_delete_photo"
                app:layout_constraintLeft_toLeftOf="@+id/ic_delete_photo"
                app:layout_constraintRight_toRightOf="@+id/ic_delete_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/ic_delete_photo"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                android:rotation="45"
                app:layout_constraintBottom_toBottomOf="@+id/user_image"
                app:layout_constraintLeft_toLeftOf="@+id/user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_back_change_photo"
                android:src="@color/colorBlueFilter"
                app:layout_constraintBottom_toBottomOf="@+id/ic_change_photo"
                app:layout_constraintTop_toTopOf="@+id/ic_change_photo"
                app:layout_constraintLeft_toLeftOf="@+id/ic_change_photo"
                app:layout_constraintRight_toRightOf="@+id/ic_change_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/ic_change_photo"
                android:src="@drawable/ic_baseline_image_search_24_black"
                app:layout_constraintBottom_toBottomOf="@+id/user_image"
                app:layout_constraintRight_toRightOf="@+id/user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/user_given_name"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@string/font_sans_serif"
                android:hint="@string/given_name"
                android:background="@null"
                android:inputType="textPersonName"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_image"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/delim_given_name"
                android:background="@color/colorBlueFilter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_given_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/user_family_name"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:fontFamily="@string/font_sans_serif"
                android:hint="@string/family_name"
                android:background="@null"
                android:inputType="textPersonName"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/delim_given_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/delim_family_name"
                android:background="@color/colorBlueFilter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_family_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:text="@string/save"
                android:backgroundTint="@color/colorBlueFilter"
                android:textColor="@color/colorBlack"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/delim_family_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/logo"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/app_title"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:fontFamily="@string/font_sans_serif"
            android:text="@string/app_name"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
